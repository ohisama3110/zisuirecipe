<h1>おすすめレシピ</h1>
<%= form_with model: @recipe do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul>
        <% @recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-5">
    <%= f.text_field :dish_name, class: 'form-control', placeholder: '料理名' %>
  </div>

  <%= f.file_field :image, accept: "image/*" %>

  <div class="col-md-10">
    <%= f.text_area :introduction, class: 'form-control', placeholder: 'おすすめポイントや紹介文' %>
  </div>

  <div class="row">
    <h4 class="col-md-2">材料</h4>
    <div class="col-md-2 col-md-offset-2">
      <%= f.text_field :servings, class: 'form-control', placeholder: '何人前' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.text_field :ingredient, class: 'form-control', placeholder: '材料名' %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :quantity, class: 'form-control', placeholder: '分量' %>
    </div>
  </div>


  <h4>手順</h4>
  <div class="col-md-6">
    <%= f.text_area :process, class: 'form-control', placeholder: '手順' %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <%= f.submit '投稿する' %>
<% end %>
