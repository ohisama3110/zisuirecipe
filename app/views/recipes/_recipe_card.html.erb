<div class="col" style="padding: 0.5rem;">
  <%= link_to recipe_path(recipe), class: "text-decoration-none text-dark" do %>
    <div class="card shadow rounded-4 h-100" style="background-color: #f9f5f0; border: none; font-family: 'Georgia', serif;">
      <% if recipe.image.attached? %>
        <%= image_tag recipe.image, class: "card-img-top rounded-top-4", style: "height: 200px; object-fit: cover;" %>
      <% end %>
      <div class="card-body pb-5">
        <h5 class="card-title fw-bold" style="color: #6b4c3b;"><%= recipe.dish_name %></h5>
        <p class="card-text small" style="color: #7c5e4b;">
          <%= truncate(recipe.ingredients.map(&:ingredient).join(", "), length: 40) %>
        </p>
        <p class="text-end small" style="color: #a0876a;">
          <i class="fas fa-user-pen"></i> <%= recipe.user.name %><br>
          <i class="fas fa-calendar-days"></i> <%= recipe.created_at.strftime("%Y年%m月%d日") %>
        </p>
      </div>
      <div class="position-absolute bottom-0 start-0 m-2 px-2 py-1 bg-warning text-dark rounded-pill small shadow-sm" style="z-index: 1;">
        ★ <%= recipe.favorites.count %>
      </div>
    </div>
  <% end %>
</div>
