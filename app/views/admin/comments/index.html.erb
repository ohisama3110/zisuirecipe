<div class="text-center">
  <h1>全コメント一覧</h1>
  <div class="center-block">
    <%= form_tag(admin_comments_path, method: :get) do %>
      <%= text_field_tag :search, params[:search], placeholder: "コメントを検索する" %>
      <%= submit_tag "検索" %>
    <% end %>
    <% @comments.each do |comment| %>
      <li>
        <%= comment.user.name %>
        <%= comment.content %>
        <%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか？' } %>
      </li>
    <% end %>
  </div>
</div>