<h1>ユーザー情報編集</h1>
<%= form_with model: @user do |f| %>
  <% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="col-md-3 mt-3">
    <h4>プロフィール画像</h4>
    <div class="form-group form-group-sm">
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
  </div>

  <div class="col-md-3 mt-3">
    <h4>ユーザー名</h4>
    <%= f.text_field :name, autofocus: true, id: "user_name", class: "form-control", placeholder: "Name" %>
  </div>
  <div class="col-md-6 mt-3">
    <%= f.text_area :introduction, autofocus: true, id: "user_introduction", class: "form-control", placeholder: "自己紹介" %>
  </div>

  <div class="mt-3">
    <%= f.submit "ユーザー更新", class: "btn btn-primary" %>
  </div>
<% end %>